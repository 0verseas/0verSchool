<div class="container">
	<div class="row">
		<div class="col-lg-6 offset-lg-3">
			<div id="login" class="card">
				<div class="card-block">
					<div class="form-group row">
						<label for="account" class="col-2 col-form-label" data-i18n="login.account"><!-- 帳號 --></label>
						<div class="col-10">
							<input class="form-control" type="text" id="account">
						</div>
					</div>
					<div class="form-group row">
						<label for="password" class="col-2 col-form-label" data-i18n="login.password"><!-- 密碼 --></label>
						<div class="col-10">
							<input class="form-control" type="password" id="password">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-10 offset-2">
							<div class="input-group">
								<button id="btn-login" type="button" class="btn btn-primary" data-i18n="login.loginBtn"><!-- 登入 --></button>
								<div class="input-group-btn">
									<button id="btn-language" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i class="fa fa-cog" aria-hidden="true"></i>
									</button>
									<div class="dropdown-menu dropdown-menu-right">
										<a class="dropdown-item btn-ch" href="#">中文</a>
										<a class="dropdown-item btn-en" href="#">English</a>
									</div>
								</div>
							</div>
						</div>
    				</div>
				</div>
			</div>
		</div>
	</div>
</div>
