							</div>
						</div>
					</form>

					<% if(system == 'twoYear') { -%>
					<%- include deptInfoForm/_selfEnrollmentTwoYear %>
					<% } else { -%>
					<%- include deptInfoForm/_selfEnrollmentOthers %>
					<% } -%>

					<% if(system == 'bachelor') { -%>
					<%- include deptInfoForm/_quotaBachelor %>
					<% } else { -%>
					<%- include deptInfoForm/_quotaOthers %>
					<% } -%>

					<div class="row">
						<div class="col">
							<div class="card">
								<div class="card-header bg-primary text-white">
									審查費用
								</div>
								<div class="card-block">
									<form>
										<div class="form-check">
											<label class="form-check-label">
												<input class="form-check-input" type="checkbox" id="has_review_fee" value="">
												是否需要收審查費用*
											</label>
										</div>
										<hr>
